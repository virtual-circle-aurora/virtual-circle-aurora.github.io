extends ./_base.pug

block header

  header.hero.is-fullheight-with-navbar.is-aurora

    .hero-body

      .container

        .columns

          mixin talent(unixName, displayName, role)

            .column

              .has-text-centered

                a(href=`/src/talents/${unixName}.pug`)

                  figure.image.is-3by1
                    img.has-object-contain(src=`/src/assets/img/${unixName}.signature.png`, alt=`${displayName}` style="filter: invert();")

                  p.title #{displayName}
                  p.subtitle #{role}


          block newTalents


block main

  section.block

    .container

      p.title.has-text-centered ギャラリー

      .columns.is-multiline.is-centered

        mixin gallery(size, position, unixName, index)

          .column(class=`is-${size}`)

            a.modal-open(data-target="js-Modal")

              figure.image.is-16by9
                img.modal-thumbnail.has-object-cover(class=`has-object-position${position}` src=`/src/assets/img/${unixName}.gallery-${index}.png`)


        block gallery
